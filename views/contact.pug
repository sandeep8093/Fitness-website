extends base.pug

block scripts 
    script(src="../static/test.js")
block style 
  style
      include ../static/style.css
      include ../static/contactStyle.css

block content
    nav#navbar
        ul
            div#logo
              a(href='/')
                img(src="/static/logo.png")
            #myDIV  
              li #[a.btn1(href='/') Home]
              li #[a.btn1(href='/about') About]
              li #[a.btn1(href='/services') Services]
              li #[a.btn1(href='/session') Sessions info]
              li #[a.btn1(href='/bmi') BMI Calculator]
              li #[a.btn1.active(href='/contact') Contact us]
    div.container
        h1 Contact Us
        form(action='/contact', method='post',class="input")
            input(type='text' name='name' placeholder='Enter your name')
            input(type='text' name='age' placeholder='Enter your age')
            input(type='text' name='gender' placeholder='Enter your gender')
            input(type='text' name='phone' placeholder='Enter your phone number')
            input(type='text' name='desc' placeholder='Enter your concern')
            button(class="btn")
                | Submit